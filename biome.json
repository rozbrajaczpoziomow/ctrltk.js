{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["**/*.js", "**/*.json"],
		"include": ["src/**"]
	},
	"formatter": {
		"enabled": false
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noDoubleEquals": "off",
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useSingleVarDeclarator": "off"
			}
		}
	}
}
